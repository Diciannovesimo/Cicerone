<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/small_hor_divider"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.ItineraryActivity"
    tools:showIn="@layout/activity_itinerary">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/luogo_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:labelText="Luogo"
                app:primaryColor="@color/colorPrimary"
                app:secondaryColor="@color/notPressedEt">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/luogo_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:editable="false" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/small_hor_divider" />

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/punto_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Punto di incontro"
                app:primaryColor="@color/colorPrimary"
                app:secondaryColor="@color/notPressedEt">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/meetPlace_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:editable="false" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/small_hor_divider" />

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/data_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Data incontro"
                app:primaryColor="@color/colorPrimary"
                app:secondaryColor="@color/notPressedEt">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/date_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:inputType="datetime" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/small_hor_divider" />

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/orario_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Orario di incontro"
                app:primaryColor="@color/colorPrimary"
                app:secondaryColor="@color/notPressedEt">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/time_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:editable="false"
                    android:focusable="false"
                    android:inputType="datetime" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/small_hor_divider" />

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/partecipanti_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Max. partecipanti"
                app:primaryColor="@color/colorPrimary"
                app:secondaryColor="@color/notPressedEt">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/MaxParticipants_et"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/small_hor_divider" />

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/lingua_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Lingua di comunicazione"
                app:primaryColor="@color/colorPrimary"
                app:secondaryColor="@color/notPressedEt">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/language_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textShortMessage" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/small_hor_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/text_field_boxes6"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    app:labelText="Compenso"
                    app:primaryColor="@color/colorPrimary"
                    app:secondaryColor="@color/notPressedEt">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/recompense_et"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="Compenso"
                        android:inputType="numberDecimal" />

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner_valute"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:ms_arrow_tint="@color/notPressedEt"
                    app:ms_background_color="@color/small_hor_divider"
                    app:ms_text_color="@color/notPressedEt"/>

            </LinearLayout>

            <View
                android:id="@+id/divider7"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/small_hor_divider" />

            <com.kinda.mtextfield.TextFieldBoxes
                android:id="@+id/descrizione_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                app:hasFocus="false"
                app:labelText="Descrizione"
                app:maxCharacters="250"
                app:primaryColor="@color/colorPrimary"
                app:secondaryColor="@color/notPressedEt">

                <com.kinda.mtextfield.ExtendedEditText
                    android:id="@+id/description_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Inserisci una description del tuo itinerario" />

            </com.kinda.mtextfield.TextFieldBoxes>

            <LinearLayout
                android:id="@+id/listStages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/errorMsg_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Devi inserire almeno una tappa"
                    android:textColor="@color/A400red"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/listStage_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:text="Aggiungi una nuova tappa" />

                <ImageView
                    android:id="@+id/addStage_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:layout_marginTop="3dp"
                    app:srcCompat="@drawable/ic_plus_green" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>